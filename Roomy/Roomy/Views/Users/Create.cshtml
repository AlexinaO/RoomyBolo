@model Roomy.Models.User

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@*<form method="post" action="@Url.Action("Create", "Users")" class="form-horizontal" role="form"></form>*@

@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        <label class="col-sm-2 control-label" for="exampleInputEmail">Email address</label>
        <div class="col-sm-10">
            <input type="email" name="email" class="form-control" id="exampleInputEmail" placeholder="Enter email">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Enregistrer</button>
        </div>
    </div>

}